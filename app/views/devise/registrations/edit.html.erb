<div>
  <h2 class="text-center">Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal", role: "form", multipart: true, method: :put }) do |f| %>
    <%= devise_error_messages! %>
  
    <div class="form-group">
      <div class='control-label col-md-3'>
        <%= f.label :image%>
      </div>
      <div class="col-md-6">
        <%= f.file_field :image, class: "form-control" %>
      </div>
    </div>
    
    <div class='form-group'>
      <div class='control-label col-md-3'>
        <%= f.label :name %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :name, class: 'form-control'%>
      </div>
    </div>
    
    <div class='form-group'>
      <div class='control-label col-md-3'>
        <%= f.label :email %>
      </div>
      <div class='col-md-6'>
        <%= f.email_field :email, class: 'form-control'%>
      </div>
    </div>
    
    <div class='form-group'>
      <div class='control-label col-md-3'>
        <%= f.label :about_me %>
      </div>
      <div class='col-md-6'>
        <%= f.text_area :about_me, class: 'form-control'%>
      </div>
    </div>
  
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
    <div class='form-group'>
      <div class='control-label col-md-3'>
        <%= f.label :password %>
      </div>
      <div class='col-md-6'>
        <%= f.password_field :password, class: 'form-control',
          autocomplete: "off" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>
                                  characters minimum)</em>
        <% end %><br />
      </div>
    </div>
  
    <div class='form-group'>
      <div class='control-label col-md-3'>
        <%= f.label :password_confirmation %>
      </div>
      <div class='col-md-6'>
        <%= f.password_field :password_confirmation,
            class: 'form-control', autocomplete: "off" %>
      </div>
    </div>
    
    <div class="form-group">
      <div class='control-label col-md-3'>
        <%= f.label :current_password %>
      </div>
      <div class='col-md-6'>
        <%= f.password_field :current_password, class: 'form-control', autocomplete: "off" %>
      </div>
    </div>
  
    <div class='form-group'>
      <div class='col-md-offset-3 col-md-6'>
        <%= f.submit "Update", class: 'btn btn-success btn-lg' %>
      </div>
    </div>
  <% end %>
  <div class='col-md-offset-3'>
    <h3>Cancel my account</h3>
  
    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger btn-lg" %></p>
    
    <%= link_to "Back", :back, class: 'btn btn-default btn-lg' %>
  </div>
</div>


  


