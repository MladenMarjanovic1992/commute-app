<br>
<h1 class="text-center">Your Messages</h1> 
<br>
<div class="container">

  <div class="row">
    <div class="col-sm-3">
      <ul class="nav nav-pills nav-stacked">
        <%= mailbox_section 'inbox', @box, remote: true %>
        <%= mailbox_section 'sent', @box, remote: true %>
        <%= mailbox_section 'trash', @box, remote: true %>
        <p><%= link_to 'Empty trash', empty_trash_conversations_path, class: 'btn btn-danger', method: :delete,
                      data: {confirm: 'Are you sure?'} %></p>
      </ul>
    </div>
  
    <div class="col-sm-9">
      <ul class="list-group">
        <%= render partial: 'conversations/conversation', collection: @conversations %>
      </ul>
    </div>
  </div>

</div>
