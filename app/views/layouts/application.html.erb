<!DOCTYPE html>
<html>
  <head>
    <title>Commute.rs</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    
  </head>

  <body>
    <header style="margin-bottom: -20px;">
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/dashboards/index">Commute.rs</a>
          </div>
      
          <!-- Collect the nav links, forms, and other content for toggling -->
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right">
              
              <% unless user_signed_in? %>
                <li><%= link_to 'Sign up', new_user_registration_path %></li>
                <li><%= link_to 'Sign in', new_user_session_path %></li>
              <% else %>
                <li style="margin-top:15px"><%= link_to current_user.email, drivers_show_path(id: current_user.id) %></li>
                <li><%= link_to 'Sign out', destroy_user_session_path, method: :delete %></li>
              <% end %>
            </ul>
          </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
      </nav>
    </header>
      <div class="row">
        <% flash.each do |key, msg| %>
          <div class="text-center alert
                      alert-<%= key == 'notice' ? 'success' : 'danger' %>">
            <%= msg %>
          
          </div>
        <% end %>
        
        
      </div>
      <%= yield %>
      <%= javascript_include_tag 'application' %>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCmdElKmT_ux06pCwT7wmIY5GQCQyMkSL8&callback=initMap&libraries=places" type="text/javascript"></script>
  </body>
  
  
</html>
