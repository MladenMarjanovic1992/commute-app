<h1>Add car</h1>

<div class='row'>
  <div class='col-md-12'>
    <%= form_for([current_user, @car],
    html: {class: "form-horizontal", role: "form", multipart: true }) do |f| %>
      <% if @car.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@car.errors.count, "error") %>
          prohibited this car from being saved:</h2>

          <ul>
          <% @car.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class='form-group'>
        <div class='control-label col-md-2'>
          <%= f.label :car_name, "Car" %>
        </div>
        <div class='col-md-10'>
          <%= f.text_field :car_name, class: 'form-control' %>
        </div>
      </div>
      
      <div class="field">
        <%= f.label :car_image %><br />
        <%= f.file_field :car_image %>
      </div>

      <div class='form-group'>
        <div class='col-md-offset-2 col-md-10'>
          <%= f.submit "Finish", class: 'btn btn-success btn-lg' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
