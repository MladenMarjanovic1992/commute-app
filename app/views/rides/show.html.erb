<div>
  <header>
    <h1 class="text-center"><%= @ride.user.name %>'s ride</h1>
  </header>
  </br>
  </br>

  <div class="container">
    <div class="row">
      <div class="col-md-5">
        <%= @ride.user.name %>
        <%= image_tag(@ride.user.image.url(:large)) %>
        <%= @ride.car.car_name %>
        <%= image_tag(@ride.car.car_image.url(:large)) %>
      </div>  
      <div class="col-md-5">
        <ul>
          <li>From: <%= @ride.origin_city %></li>
          <li>To: <%= @ride.destination_city %></li>
          <li>Ride date: <%= @ride.normal_date %></li>
          <li>Ride time: <%= @ride.just_time %></li>
          <li>Seats: <%= @ride.seats %></li>
          <li>Price: <%= @ride.price %></li>
          <li>Details: <%= @ride.details %></li>
          <li hidden id="origin-lat"><%= @ride.lat_origin %></li>
          <li hidden id="origin-long"><%= @ride.long_origin %></li>
          <li hidden id="destination-lat"><%= @ride.lat_destination %></li>
          <li hidden id="destination-long"><%= @ride.long_destination %></li>
        </ul>
      </div> 
      <% if current_user == @ride.user %>
        <div class"col-md-2">
          <%= link_to "Edit ride", [:edit, current_user, @ride], class: "btn btn-default btn-lg" %>
          <%= link_to 'Delete ride', [current_user, @ride],
                        class: "btn btn-default btn-lg",
                        method: :delete,
                        data: { confirm: 'Are you sure?' } %>
        </div>
      <% end %>
    </div>
    <div class="row">
      <div id="map">
        
      </div>
    </div>
  </div>
  <% if session[:search_results] %>
    <%= link_to "Back", session[:search_results], class: "btn btn-lg btn-success" %>
  <% else %>
    <%= link_to "Back", :back, class: "btn btn-lg btn-success" %>
  <% end %>
  
</div>



